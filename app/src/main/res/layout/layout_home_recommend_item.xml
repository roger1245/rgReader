<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/cardStyle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_recommend_item_layout_height"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_video_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_video_play_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_video_image_view"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="title" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/item_video_play_title"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:tint="@color/White"
                app:srcCompat="@drawable/ic_img_play_number" />

            <TextView
                android:id="@+id/item_video_play_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="play number"
                android:textColor="@color/White"
                tools:textColor="@color/Black"

                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:tint="@color/White"
                app:srcCompat="@drawable/ic_img_danmaku_number" />

            <TextView
                android:id="@+id/item_video_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comment"
                android:textColor="@color/White"
                tools:textColor="@color/Black" />

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>